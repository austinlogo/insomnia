<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:id="@+id/item_new_task_layout"
              android:layout_width="match_parent"
              android:animateLayoutChanges="true"
              android:layout_height="match_parent">

    <EditText
        android:id="@+id/item_new_task_title"
        android:hint="@string/add_task"
        android:inputType="text"
        android:visibility="visible"
        android:imeOptions="actionDone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        style="@style/AppTheme.TextView"
        android:id="@+id/item_new_task_date"
        android:visibility="gone"
        android:hint="@string/click_to_set_date"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/item_new_task_success_criteria_container"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            style="@style/AppTheme.TextView"
            android:text="@string/select_a_success_criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/item_new_task_success_criteria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>