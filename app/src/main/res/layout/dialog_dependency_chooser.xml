<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#EEE"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="300dp">

    <TextView
        style="@style/AppTheme.TextView"
        android:id="@+id/fragment_dependency_chooser"
        android:text="@string/choose_dependent_task"
        android:paddingBottom="@dimen/standardSpace"
        android:paddingTop="@dimen/standardSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/dialog_dependency_chooser_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>