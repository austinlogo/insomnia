<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

    <include layout="@layout/include_background_blue" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/standardSpace"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/xlSpace"
            android:text="@string/how_we_do_this"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold"/>


        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="@dimen/standardSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <ImageView
                    style="@style/AppTheme.Icon"
                    android:src="@drawable/ic_today_black_24dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standardSpace"
                    android:text="@string/focus_title"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/slide_subtitle"
                    android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="@dimen/standardSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/AppTheme.Icon"
                android:src="@drawable/tree_black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standardSpace"
                android:text="@string/theme_title"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/slide_subtitle"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="@dimen/standardSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/AppTheme.Icon"
               android:src="@drawable/goal_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standardSpace"
                android:text="@string/goal_title"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/slide_subtitle"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="@dimen/standardSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/AppTheme.Icon"
                android:src="@drawable/ic_block_black_48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standardSpace"
                android:text="@string/dependency_title"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/slide_subtitle"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="@dimen/standardSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/AppTheme.Icon"
                android:src="@drawable/ic_timelapse_black_36dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standardSpace"
                android:text="@string/active_hours"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/slide_subtitle"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>