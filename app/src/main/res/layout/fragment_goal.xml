<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/AppTheme.Fragment"
              android:orientation="vertical"
              android:scrollbars="vertical"
              android:scrollbarAlwaysDrawVerticalTrack="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
        android:id="@+id/fragment_goal_title"
        style="@style/AppTheme.EditText.NoMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="none"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/fragment_goal_description"
        style="@style/AppTheme.EditText"
        android:layout_width="match_parent"
        android:gravity="top|start"
        android:minHeight="50dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/fragment_goal_new_success_criteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fragment_goal_new_success_criteria_title"
            android:hint="@string/new_success_criteria"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:textSize="15sp"
            android:inputType="text"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:text=""/>

        <EditText
            android:id="@+id/fragment_goal_new_success_criteria_committed"
            android:hint="@string/success_criteria_commited_hint"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:textSize="15sp"
            android:textAlignment="viewEnd"
            android:inputType="number"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:text=""/>
    </LinearLayout>

    <ListView
        android:id="@+id/fragment_goal_success_criteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/item_new_task_title"
            android:hint="@string/add_task"
            android:inputType="text"
            android:visibility="visible"
            android:imeOptions="actionDone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ListView
            android:id="@+id/fragment_goal_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>