<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorbackground</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="android:dropDownSpinnerStyle">@style/AppTheme.Spinner</item>
    </style>

    <style name="AppTheme.TextView" parent="android:TextAppearance.Widget.TextView">
        <item name="android:foreground">#000</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#AAA</item>
    </style>

    <style name="AppTheme.EditText" parent="android:TextAppearance.Widget.TextView">
        <item name="android:foreground">#000</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#AAA</item>
    </style>

    <style name="AppTheme.Spinner" parent="android:TextAppearance.Widget.TextView">
        <item name="android:foreground">#000</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#AAA</item>
    </style>

</resources>